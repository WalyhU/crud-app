<form action="/notes/edit/{{note.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="card">
        <header class="card-header">
            <p class="card-header-title">
                Edit Note
            </p>
            <button class="card-header-icon" aria-label="more options">
                <span class="icon">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
            </button>
        </header>
        <div class="card-content">
            <div class="content">
                <div class="field">
                    <div class="control">
                        <input class="input" type="text" name="title" placeholder="Title" value="{{note.title}}" autofocus>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <textarea class="textarea" name="description" placeholder="Description">{{note.description}}</textarea>
                    </div>
                </div>
            </div>
        </div>
        <footer class="card-footer">
            <a href="#" class="card-footer-item btn-footer"><button class="btn">Update</button></a>
        </footer>
    </div>
</form>