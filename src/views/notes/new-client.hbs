{{>navigation_profile_admin}}
<div class="separacion"></div>
<link href="https://unpkg.com/tailwindcss@2.2.4/dist/tailwind.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/add-client.css">
<link rel="stylesheet" href="/css/profile.css">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<section id="Formulario">
    <div class="form">
        <div class="contenido">
            <div class="titulo">
                <h1>Añadir Cliente</h1>
            </div>
            <div class="contenedor-form">
                <form action="/clients/new-client" method="post">
                    <select name="user" class="user-select single js-states form-control" id="id_label_single"
                        style="width: 100%;">
                        <option value="" disabled selected>Seleccione un usuario...</option>
                        {{#each users}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                    <input type="number" name="dpi" placeholder="dpi" autocomplete="off" autofocus>
                    <input type="text" name="nombre" id="nombre" placeholder="nombre" autocomplete="off">
                    <input type="text" name="apellido" placeholder="apellido" autocomplete="off">
                    <input type="text" name="direccion" placeholder="direccion" autocomplete="off">
                    <input type="number" name="telefono" placeholder="número de teléfono" autocomplete="off">
                    <input type="submit" value="Añadir">
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    $('.user-select').select2({
        placeholder: 'Selecciona un usuario...'
    });
</script>